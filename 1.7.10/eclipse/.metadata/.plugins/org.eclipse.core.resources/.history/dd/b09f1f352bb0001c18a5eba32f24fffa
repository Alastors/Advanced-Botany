package ab.common.item.relic;

import java.util.List;

import cpw.mods.fml.common.eventhandler.SubscribeEvent;
import net.minecraft.entity.item.EntityItem;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;
import net.minecraftforge.common.MinecraftForge;
import net.minecraftforge.event.entity.living.LivingDropsEvent;

public class ItemSehrimnirHide extends ItemModRelic {
	
	public ItemSehrimnirHide() {
		super("sehrimnirHide");
		MinecraftForge.EVENT_BUS.register(this);
	}

	@SubscribeEvent
	public void onPlayerAttack(LivingDropsEvent event) {
		List<EntityItem> items = event.drops;
		event.drops.addAll(event.drops);
		World world = event.entityLiving.worldObj;
		double posX = event.entityLiving.posX;
		double posY = event.entityLiving.posY;
		double posZ = event.entityLiving.posZ;
		for(EntityItem entity : items) {
			if(!world.isRemote) {
				ItemStack loot = entity.getEntityItem().copy();
				loot.stackSize = Math.max(1, (int)(loot.stackSize / 1.5f));
				EntityItem item = new EntityItem(world, posX, posY, posZ, loot);
				world.spawnEntityInWorld(item);
			}
		}
	}
}